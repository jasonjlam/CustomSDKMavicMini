<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sticks_virtual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="60dp"
    android:layout_marginTop= "100dp"
    android:orientation="vertical"
    tools:context=".VirtualSticks">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Virtual Stick"
        style="@style/common_button"
        android:id="@+id/btn_enable_virtual_stick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Virtual Stick"
        android:singleLine="true"
        style="@style/common_button"
        android:id="@+id/btn_disable_virtual_stick"/>
    <!--        android:layout_alignEnd="@+id/btn_enable_virtual_stick"-->     />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin"
        style="@style/common_button"
        android:id="@+id/btn_spin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orbit"
        style="@style/common_button"
        android:id="@+id/btn_orbit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waypoint"
        style="@style/common_button"
        android:id="@+id/btn_waypoint"/>

    <TextView
        android:id="@+id/text_pitchvelocity"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"/>

    <SeekBar
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_pitchvelocity"
        style="@style/common_seekbar"
        android:max="100"
        android:progress="50"/>

    <TextView
        android:id="@+id/text_angularvelocity"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"/>

    <SeekBar
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_angularvelocity"
        style="@style/common_seekbar"
        android:max="100"
        android:progress="50"/>



</LinearLayout>
