<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sticks_virtual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".VirtualSticks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Buttons"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:translationX="60dp"
            android:translationY="30dp">

            <Button
                android:id="@+id/btn_disable_virtual_stick"
                style="@style/common_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Disable Virtual Stick" />

            <Button
                android:id="@+id/btn_camera"
                style="@style/common_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Camera" />

            <Button
                android:id="@+id/btn_spin"
                style="@style/common_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spin" />

            <Button
                android:id="@+id/btn_orbit"
                style="@style/common_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orbit" />

            <Button
                android:id="@+id/btn_waypoint"
                style="@style/common_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waypoint" />

            <Button
                android:id="@+id/btn_map"
                style="@style/common_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Sliders"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:translationX="-40dp"
            android:translationY="90dp">

            <TextView
                android:id="@+id/text_rollvelocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/white" />

            <SeekBar
                android:id="@+id/seekbar_rollvelocity"
                style="@style/common_seekbar"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/text_angularvelocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@android:color/white" />

            <SeekBar
                android:id="@+id/seekbar_angularvelocity"
                style="@style/common_seekbar"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
